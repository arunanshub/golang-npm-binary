{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",

  "targets": {
    "install": {
      "command": "pnpm i",
      "outputs": ["{projectRoot}/node_modules/.bin/*"],
      "cache": true,
      "options": {
        "cwd": "{projectRoot}"
      }
    },

    "verify": {
      "dependsOn": ["^build", "install"],
      "command": "pnpm run smoke",
      "options": {
        "cwd": "{projectRoot}"
      }
    }
  }
}
