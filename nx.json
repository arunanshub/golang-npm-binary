{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "master",
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/dist/**"],
      "cache": true
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "cache": true
    },
    "dev": {
      "cache": false
    }
  },
  "release": {
    "projects": [
      "@test-pkg-factory/cli",
      "@test-pkg-factory/cli-linux-x64",
      "@test-pkg-factory/cli-win32-x64"
    ],
    "projectsRelationship": "fixed",
    "versionPlans": true,
    "version": {
      "specifierSource": "version-plans",
      "git": {
        "commit": true,
        "commitMessage": "chore(release): v{version}",
        "tag": true,
        "push": false
      }
    },
    "changelog": false,
    "releaseTag": {
      "pattern": "v{version}"
    }
  }
}
