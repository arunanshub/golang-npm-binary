{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",

  "parallel": 4,

  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "sharedGlobals": [
      "{workspaceRoot}/go.mod",
      "{workspaceRoot}/go.sum",
      "{projectRoot}/package.json",
      "{workspaceRoot}/pnpm-lock.yaml"
    ]
  },

  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/dist/**/*"],
      "cache": true
    }
  }
}
